{
  "name": "server",
  "version": "1.0.0",
  "description": "Server",
  "main": "app.js",
  "scripts": {
    "build": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "start": "babel-node ./src/bin/www",
    "dev": "babel-node ./src/bin/www",
    "test": "jest --coverage .test.js",
    "lint": "eslint --ext .js . --fix",
    "db:seed": "babel-node seedGenerator/ && babel-node seedGenerator/populate"
  },
  "author": "Navneet Sahota",
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/node": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@hapi/joi": "^15.1.1",
    "bcrypt": "^3.0.6",
    "cloudinary": "1.14.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "http-errors": "~1.6.3",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.3.0",
    "mongoose": "^5.6.9",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "nodemailer": "^6.3.0",
    "pug": "^2.0.4",
    "rimraf": "^3.0.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1",
    "faker": "^4.1.0",
    "jest": "24.8.0",
    "mongodb-memory-server": "^5.2.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2"
  }
}